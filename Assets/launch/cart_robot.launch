<launch>
<!-- Robot -->
  <arg name="x_pos" default="-73.5"/>
  <arg name="y_pos" default="9.5"/>
  <arg name="z_pos" default="1.0"/>

  <!-- Robot Params -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find automatic_cart)/models/shopping_cart/automatic_cart.urdf.xacro" />
  
  <rosparam file="$(find automatic_cart)/config/control_params.yaml" command="load"/>
  <rosparam command="load"
            file="$(find automatic_cart)/config/joints.yaml"
            ns="cart_joint_state_controller" />
  <rosparam command="load"
            file="$(find automatic_cart)/config/diffdrive.yaml"
            ns="cart_diff_drive_controller" />
  <node name="cart_controller_spawner" pkg="controller_manager" type="spawner"
    args="cart_joint_state_controller
          cart_diff_drive_controller
          --shutdown-timeout 3"/>
  
  <!-- Robot Spawn -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model automatic_cart -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

</launch>

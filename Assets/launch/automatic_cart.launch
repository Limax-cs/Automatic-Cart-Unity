<launch>
  <arg name="model" default="$(find automatic_cart)/models/shopping_cart/automatic_cart.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

  <include file="$(find automatic_cart)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find automatic_cart)/config/joints.yaml"
            ns="cart_joint_state_controller" />
  <rosparam command="load"
            file="$(find automatic_cart)/config/diffdrive.yaml"
            ns="cart_diff_drive_controller" />

  <node name="cart_controller_spawner" pkg="controller_manager" type="spawner"
    args="cart_joint_state_controller
          cart_diff_drive_controller
          --shutdown-timeout 3"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/cart_diff_drive_controller/cmd_vel"/>
  </node>
</launch>
